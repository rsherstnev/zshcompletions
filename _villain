#compdef villain

_arguments -s \
    '(-h --help)'{-h,--help}'[Show this help message and exit]' \
    '(-p --port)'{-p,--port}'[Team server port (default: 6501)]:port number:_ports' \
    '(-x --hoax-port)'{-x,--hoax-port}'[HoaxShell server port (default: 8080 via http, 443 via https)]:hoax port:_ports' \
    '(-n --reverse-tcp-port)'{-n,--reverse-tcp-port}'[Reverse TCP multi-handler port (default: 4443)]:reverse TCP port:_ports' \
    '(-f --file-smuggler-port)'{-f,--file-smuggler-port}'[HTTP file smuggler server port (default: 8888)]:file smuggler port:_ports' \
    '(-i --insecure)'{-i,--insecure}'[Allow unverified Villain clients to connect]' \
    '(-c --certfile)'{-c,--certfile}'[Path to your ssl certificate (for HoaxShell https server)]:cert file:_files' \
    '(-k --keyfile)'{-k,--keyfile}'[Path to the private key for your certificate (for HoaxShell https server)]:key file:_files' \
    '(-u --update)'{-u,--update}'[Try to fetch the latest commits from the main branch on GitHub]' \
    '(-v --version)'{-v,--version}'[Show version and exit]' \
    '(-q --quiet)'{-q,--quiet}'[Suppress banner on startup]'
